{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "composer": {
    "constraints": {
      "php": "8.1"
    }
  },
  "packageRules": [
    {
      "managers": ["composer"],
      "enabled": true
    },
    {
      "managers": ["npm", "nvm"],
      "enabled": false
    }
  ]
}
