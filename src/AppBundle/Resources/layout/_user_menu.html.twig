<div class="user-menu">
  {% if not app.currentUser.isAuthentified %}
    <a href="{{ path("user_login", { return_url: app.currentUrl }) }}">
      <span class="fa fa-user-circle-o"></span>
      Connexion
    </a>
  {% else %}
    <a href="{{ path("user_account") }}">
      <span class="fa fa-user-circle"></span>
      Mon compte {{ app.site.title }}
    </a>
  {% endif %}
</div>