{% extends "layout:base.html.twig" %}

{% block title %}
    Administration Biblys
{% endblock %}

{% block main %}
    <h1>
        Suppression d'un article
    </h1>


    {% if error %}

        <p class="alert alert-danger">{{ error }}</p>

    {% endif %}

    <form method="post" class="fieldset">
        <fieldset>
            <p><strong>Article Ã  supprimer : <a href="/{{ article.url }}">{{ article.title }}</a></strong></p>

            <div class="form-group">
                <textarea name="reason" id="reason" rows="10" class="form-control" maxlength=512 required placeholder="Raison de la suppression"></textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </div>
        </fieldset>
    </form>
{% endblock %}
