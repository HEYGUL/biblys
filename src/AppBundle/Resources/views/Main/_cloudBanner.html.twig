<div class="alert
        {% if cloud.subscription.hasExpired %}
            alert-danger
        {% elseif cloud.subscription.isExpiringSoon %}
            alert-warning
        {% else %}
            alert-success
        {% endif%}
    text-center">
    <span class="fa
        {% if cloud.subscription.hasExpired %}
            fa-exclamation-circle
        {% elseif cloud.subscription.isExpiringSoon %}
            fa-info-circle
        {% else %}
            fa-check-circle
        {% endif%}
    "></span>
    {% if cloud.subscription.hasExpired %}
        Votre abonnement Biblys Cloud a expir√©.
    {% else %}
        Votre abonnement Biblys Cloud expire.
    {% endif %}
    &nbsp;
    <a href="{{ path('main_admin_cloud') }}" class="btn btn-sm btn-primary">En savoir plus</a>
</div>
