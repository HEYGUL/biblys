{% extends "layout:base.html.twig" %}

{% block title %}
  {{ rayon.name }}
{% endblock %}

{% block main %}

  <h1 class="page-title rayon-page-title">
    {{ rayon.name }}
  </h1>

  {% if rayon.has('desc') %}
    <div class="rayon-description">
      {{ rayon.desc|raw }}
    </div>
  {% endif %}

  {% include 'AppBundle:Article:_list.html.twig' %}

  {% if app.user.isAdmin() %}
    <div class="admin">
      <p>Rayon nÂ°
        {{ rayon.id }}</p>
      <p>
        <a href="{{ path('rayon_edit', { id: rayon.id }) }}">modifier</a>
      </p>
      <p>
        <a href="{{ path('rayon_add', { id: rayon.id }) }}">ajouter</a>
      </p>
      <p>
        <a href="{{ path('rayon_delete', { id: rayon.id }) }}"
           data-confirm="Voulez-vous vraiment SUPPRIMER le rayon {{ rayon.name }} ?">
          supprimer
        </a>
      </p>
    </div>
  {% endif %}

{% endblock %}
