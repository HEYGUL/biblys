{% extends "layout:base.html.twig" %}

{% block title %}
  Modifier le contributeur {{ people.name }}
{% endblock %}

{% block main %}
  <h1>
    Modifier le contributeur
    <a href="{{ path("people_show", { slug: people.url }) }}">
      {{ people.name }}
    </a>
  </h1>

  {% if error %}
    <p class="alert alert-danger">{{ error }}</p>
  {% endif %}

  {% include 'AppBundle:People:_form.html.twig' %}

  <p>
    <a class="btn btn-default" data-toggle="collapse" data-target="#viewdetails">Informations supplémentaires
      &raquo;</a>
  </p>
  <form id="viewdetails" class="collapse fieldset">
    <fieldset>
      <p>
        <label class="after">Identifiant :</label>
        <input value="{{ people.id }}" class="form-control" readonly>
      </p>
      <p>
        <label class="after">Slug :</label>
        <input value="{{ people.url }}" class="form-control" readonly>
      </p>
      <p>
        <label class="after">Date de création :</label>
        <input value="{{ people.has('created') ? people.created }}" class="form-control" readonly>
      </p>
      <p>
        <label class="after">Date de modification :</label>
        <input value="{{ people.has('updated') ? people.updated }}" class="form-control" readonly>
      </p>
    </fieldset>
  </form>

{% endblock %}